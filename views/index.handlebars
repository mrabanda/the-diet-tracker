<h1>Burgers</h1>

<h2>These Burgers Must Be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>The Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burgerName">
  </div>
  <div class="form-group">
    {{!--<label for="burg">Burger Name:</label>--}}
    <input type="hidden" name="devoured" value=0>
  </div>
  <button type="submit">Add Burger</button>
</form>